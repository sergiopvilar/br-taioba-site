{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "216e2a25-8da1-40df-9097-63ee328fe493": {
          "type": "custom_liquid",
          "disabled": true,
          "settings": {
            "custom_liquid": "{% assign voltaFerias = '2024-02-19' %}\n\n{% comment %}\nMostra prazo de envio quando estamos de férias\n{% endcomment %}\n\n{% assign dateStart = voltaFerias | date: '%s' %}\n{% assign nowTimestamp = 'now' | date: '%s' %}\n\n{% comment %} difference in seconds {% endcomment %}\n{% assign diffSeconds = nowTimestamp | minus: dateStart %}\n\n{% comment %} difference in days {% endcomment %}\n{% assign diffDays = diffSeconds | divided_by: 3600 | divided_by: 24 | times: -1 %}\n\n<p style=\"color:#e69148\">Este produto será enviado {{ diffDays }} dias após sua compra.<\/p>"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Compartilhar"
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "quantity_selector",
        "216e2a25-8da1-40df-9097-63ee328fe493",
        "buy_buttons",
        "share",
        "description"
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "background-1",
        "media_size": "small",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "thumbnail_slider",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "show",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 40,
        "padding_bottom": 0
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "Você também pode gostar",
        "heading_size": "h1",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": true,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 56,
        "padding_bottom": 56
      }
    }
  },
  "order": [
    "main",
    "related-products"
  ]
}
