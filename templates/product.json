          "settings": {
            "custom_liquid": "{% assign voltaFerias = '2024-02-19' %}\n\n{% comment %}\nMostra prazo de envio quando estamos de férias\n{% endcomment %}\n\n{% assign dateStart = voltaFerias | date: '%s' %}\n{% assign nowTimestamp = 'now' | date: '%s' %}\n\n{% comment %} difference in seconds {% endcomment %}\n{% assign diffSeconds = nowTimestamp | minus: dateStart %}\n\n{% comment %} difference in days {% endcomment %}\n{% assign diffDays = diffSeconds | divided_by: 3600 | divided_by: 24 | times: -1 %}\n\n<p style=\"color:#e69148\">Este produto será enviado {{ diffDays }} dias após sua compra.<\/p>"
          }
        },
        "collapsible_tab_EbWwf8": {
